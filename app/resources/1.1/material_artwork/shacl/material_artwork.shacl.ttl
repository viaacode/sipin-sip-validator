@prefix premis: <http://www.loc.gov/premis/rdf/v3/> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix relSubType: <http://id.loc.gov/vocabulary/preservation/relationshipSubType/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix schema: <https://schema.org/> .
@prefix pav: <http://purl.org/pav/> .
@prefix haObj: <https://data.hetarchief.be/ns/object/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix edtf: <http://id.loc.gov/datatypes/edtf/> .
@prefix omg: <http://www.w3id.org/omg#> .
@prefix gom: <https://www.w3id.org/gom#> .

@base <https://data.hetarchief.be/ns/sip_material_artwork/shapes> .

<#IntellectualEntityShape> a sh:NodeShape ;
  sh:targetClass premis:IntellectualEntity ;
  sh:property
  [
    a sh:PropertyShape ;
    sh:path schema:creator ;
    sh:nodeKind sh:IRI ;
    # sh:node <#RoleShape> ;
    sh:class schema:Role ;
    sh:name "creator"@en ;
    sh:description "The creator of the intellectual entity."@en ;
  ],
  [
    a sh:PropertyShape ;
    sh:path schema:height ;
    sh:nodeKind sh:BlankNodeOrIRI ;
    # sh:node <#QuantitativeValueShape> ;
    sh:class schema:QuantitativeValue ;
    sh:name "height"@en ;
    sh:description "The height of the intellectual entity."@en ;
    sh:maxCount 1 ;
  ],
  [
    a sh:PropertyShape ;
    sh:path schema:width ;
    sh:nodeKind sh:BlankNodeOrIRI ;
    # sh:node <#QuantitativeValueShape> ;
    sh:class schema:QuantitativeValue ;
    sh:name "width"@en ;
    sh:description "The width of the intellectual entity."@en ;
    sh:maxCount 1 ;
  ],
  [
    a sh:PropertyShape ;
    sh:path schema:depth ;
    sh:nodeKind sh:BlankNodeOrIRI ;
    # sh:node <#QuantitativeValueShape> ;
    sh:class schema:QuantitativeValue ;
    sh:name "depth"@en ;
    sh:description "The depth of the intellectual entity."@en ;
    sh:maxCount 1 ;
  ],
  [
    a sh:PropertyShape ;
    sh:path schema:weigth ;
    sh:nodeKind sh:BlankNodeOrIRI ;
    # sh:node <#QuantitativeValueShape> ;
    sh:class schema:Collection ;
    sh:name "weigth"@en ;
    sh:description "The weigth of the intellectual entity."@en ;
    sh:maxCount 1 ;
  ],
  [
    a sh:PropertyShape ;
    sh:path schema:isPartOf ;
    sh:nodeKind sh:BlankNodeOrIRI ;
    # sh:node <#QuantitativeValueShape> ;
    sh:class schema:QuantitativeValue ;
    sh:name "is Part Of"@en ;
    sh:description "The collection this intellectual entity is part of."@en ;
  ] ,
  [
    a sh:PropertyShape ;
    sh:path schema:artMedium ;
    sh:nodeKind sh:Literal ;
    sh:datatype rdf:langString ;
    sh:description "The material used to create the physical artwork."@en ;
    sh:message "The art medium is not a langString or occurs more than once."@en ;
    sh:uniqueLang true
  ],
  [
    a sh:PropertyShape ;
    sh:path schema:artform ;
    sh:nodeKind sh:Literal ;
    sh:datatype rdf:langString ;
    sh:description "The type of artform."@en;
    sh:message "The artform is not a langString or occurs more than once."@en ;
    sh:uniqueLang true
  ],
  [
    a sh:PropertyShape ;
    sh:path schema:isPartOf ;
    sh:nodeKind sh:IRI ;
    sh:or (
      [ sh:class schema:Episode ]
      [ sh:class schema:ArchiveComponent ]
      [ sh:class schema:CreativeWorkSeries ]
      [ sh:class schema:BroadcastEvent ]
      [ sh:class schema:CreativeWorkSeason ]
    ) ;
    sh:message """`dcterms:isPartOf` not of type `schema:Episode`, `schema:ArchiveComponent`, `schema:CreativeWorkSeries`, `schema:BroadcastEvent` or `schema:CreativeWorkSeason`.
      """@en ;
  ] .

<#CollectionShape> a sh:NodeShape ;
  sh:targetClass schema:Collection ;
  sh:property
  [
    a sh:PropertyShape ;
    sh:path schema:name ;
    sh:nodeKind sh:Literal ;
    sh:datatype rdf:langString ;
    sh:description "The name of the collection."@en ;
    sh:message "The name is not a langString or occurs more than once."@en ;
    sh:uniqueLang true
  ],
  [
    a sh:PropertyShape ;
    sh:path schema:identifier ;
    sh:nodeKind sh:Literal ;
    sh:datatype xsd:string ;
    sh:description "The identifier of the collection."@en ;
    sh:message "The identifier is not a string or is absent."@en ;
    sh:minCount 1 ;
  ] .

<#RepresentationShape> a sh:NodeShape ;
  sh:targetClass premis:Representation ;
  sh:property
  # Optional schema.org
  [
    a sh:PropertyShape ;
    sh:path schema:creator ;
    sh:nodeKind sh:IRI ;
    # sh:node <#RoleShape> ;
    sh:class schema:Role ;
    sh:name "creator"@en ;
    sh:description "The creator of the intellectual entity."@en ;
  ],
  [
    a sh:PropertyShape ;
    sh:path schema:height ;
    sh:nodeKind sh:BlankNodeOrIRI ;
    # sh:node <#QuantitativeValueShape> ;
    sh:class schema:QuantitativeValue ;
    sh:name "height"@en ;
    sh:description "The height of the intellectual entity."@en ;
    sh:maxCount 1 ;
  ],
  [
    a sh:PropertyShape ;
    sh:path schema:width ;
    sh:nodeKind sh:BlankNodeOrIRI ;
    # sh:node <#QuantitativeValueShape> ;
    sh:class schema:QuantitativeValue ;
    sh:name "width"@en ;
    sh:description "The width of the intellectual entity."@en ;
    sh:maxCount 1 ;
  ],
  [
    a sh:PropertyShape ;
    sh:path schema:depth ;
    sh:nodeKind sh:BlankNodeOrIRI ;
    # sh:node <#QuantitativeValueShape> ;
    sh:class schema:QuantitativeValue ;
    sh:name "depth"@en ;
    sh:description "The depth of the intellectual entity."@en ;
    sh:maxCount 1 ;
  ] ,
  [
    a sh:PropertyShape ;
    sh:path schema:artMedium ;
    sh:nodeKind sh:Literal ;
    sh:datatype rdf:langString ;
    sh:description "The material used to create the physical artwork."@en ;
    sh:message "The art medium is not a langString or occurs more than once."@en ;
    sh:uniqueLang true ;
  ],
  [
    a sh:PropertyShape ;
    sh:path schema:artform ;
    sh:nodeKind sh:Literal ;
    sh:datatype rdf:langString ;
    sh:description "The type of artform."@en;
    sh:message "The artform is not a langString or occurs more than once."@en ;
    sh:severity sh:Warning ;
    sh:uniqueLang true ;
  ] .

<#FileShape> a sh:NodeShape ;
  sh:targetClass premis:File ;
  sh:property
  [
    a sh:PropertyShape ;
    sh:path omg:hasGeometry ;
    sh:nodeKind sh:IRI ;
    sh:class omg:Geometry ;
    sh:name "has geometry"@en ;
    sh:description "The geometry of the file."@en ;
  ] .

<#GeometryShape> a sh:NodeShape ;
  sh:targetClass omg:Geometry ;
  sh:property
  [
    a sh:PropertyShape ;
    sh:path gom:hasVertices ;
    sh:nodeKind sh:Literal ;
    sh:datatype xsd:string ;
    sh:name "has vertices"@en ;
    sh:description "The number of vertices of the geometry."@en ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ],
  [
    a sh:PropertyShape ;
    sh:path gom:hasFaces ;
    sh:nodeKind sh:Literal ;
    sh:datatype xsd:string ;
    sh:name "has faces"@en ;
    sh:description "The number of faces (e.g. triangles) of the geometry."@en ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ] .

<#QuantitativeValueShape> a sh:NodeShape ; 
    sh:targetClass schema:QuantitativeValue ;
    sh:property
    [
        a sh:PropertyShape ;
        sh:path schema:unitCode ;
        sh:nodeKind sh:Literal ;
        sh:datatype xsd:string ;
        sh:name "unit code"@en ;
        sh:description "The unit of measurement given using the UN/CEFACT Common Code (3 characters)."@en ;
        sh:maxCount 1 ;
    ],
    [
        a sh:PropertyShape ;
        sh:path schema:unitText ;
        sh:nodeKind sh:Literal ;
        sh:datatype xsd:string ;
        sh:name "unit text"@en ;
        sh:description "A string or text indicating the unit of measurement. Useful if you cannot provide a standard unit code for unitCode."@en ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ],
    [
        a sh:PropertyShape ;
        sh:path schema:value ;
        sh:nodeKind sh:Literal ;
        sh:datatype xsd:float ;
        sh:name "value"@en ;
        sh:description "The value of the quantitative value or property value node."@en ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] .

<#RoleShape> a sh:NodeShape ;
    sh:targetClass schema:Role ;
    sh:property
    [
        a sh:PropertyShape ;
        sh:path schema:creator ;
        sh:nodeKind sh:IRI ;
        # sh:node <#PersonShape> ;
        sh:class schema:Person ;
        sh:severity sh:Violation ;
        sh:message "schema:creator is not of class schema:Person"@en ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ],
    [
        a sh:PropertyShape ;
        sh:path schema:roleName ;
        sh:nodeKind sh:Literal ;
        sh:datatype xsd:string ; 
        sh:name "role name"@en ;
        sh:severity sh:Violation ;
        sh:message "schema:roleName is missing or not of type string"@en ;    
    ] .


<#PersonShape> a sh:NodeShape ;
    sh:targetClass schema:Person ;
    sh:property
    [
        a sh:PropertyShape ;
        sh:path schema:name ;
        sh:nodeKind sh:Literal ;
        sh:datatype xsd:string ;
        sh:name "name"@en ;
        sh:description "The  name of a person associated with the artwork."@en ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ],
    [
        a sh:PropertyShape ;
        sh:path schema:birthDate ;
        sh:nodeKind sh:Literal ;
        sh:or (
            [ sh:datatype edtf:EDTF-level0 ]
            [ sh:datatype edtf:EDTF-level1 ]
            [ sh:datatype edtf:EDTF-level2 ]
            [ sh:datatype edtf:EDTF ]
        ) ;
        sh:name "Birth date"@en ;
        sh:description "The birth date of a person associated with the artwork."@en ;
        sh:maxCount 1 ;
    ],
    [
        a sh:PropertyShape ;
        sh:path schema:deathDate ;
        sh:nodeKind sh:Literal ;
        sh:or (
            [ sh:datatype edtf:EDTF-level0 ]
            [ sh:datatype edtf:EDTF-level1 ]
            [ sh:datatype edtf:EDTF-level2 ]
            [ sh:datatype edtf:EDTF ]
        ) ;
        sh:name "Death date"@en ;
        sh:description "The death date of a person associated with the artwork."@en ;
        sh:maxCount 1 ;
    ] .
