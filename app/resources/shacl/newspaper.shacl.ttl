@prefix premis: <http://www.loc.gov/premis/rdf/v3/> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix schema: <https://schema.org/> .
@prefix pav: <http://purl.org/pav/> .
@prefix haObj: <https://data.hetarchief.be/ns/object/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix edtf: <http://id.loc.gov/datatypes/edtf/> .
@prefix mods: <http://www.loc.gov/mods/rdf/v1#> .
@prefix madsrdf: <http://www.loc.gov/mads/rdf/v1#> .
@prefix edm: <http://www.europeana.eu/schemas/edm/> .


@base <https://data.hetarchief.be/ns/sip_kranten/shapes> .
<>  a owl:Ontology ;
    dct:author  [
        schema:name   "Lennert Van de Velde" ;
        schema:email  "lennert.vandevelde@meemoo.be"
    ] ;
    dct:title     "Data model NEWSPAPER"@en ;
    dct:created   "2023-02-08" ;
    dct:modified  "2023-02-08" ;
    dct:description """Data model to describe the content of objects."""@en ;
    pav:version "0.0.1" .

<#IntellectualEntityShape> a sh:NodeShape ;
    sh:targetClass premis:IntellectualEntity ;
    sh:property
    [
        a sh:PropertyShape ;
        sh:path dct:title ;
        sh:nodeKind sh:Literal ;
        sh:datatype rdf:langString ;
        sh:name "Title"@en ;
        sh:description "The title of the newspaper."@en ;
        sh:minCount 1 ;
        sh:uniqueLang true ;
    ],
    [
        a sh:PropertyShape ;
        sh:path dct:identifier ;
        sh:nodeKind sh:IRI ;
        # sh:class haObj:LocalIdentifier ;
        sh:node <#ObjectIdentifierShape> ;
        sh:name "Identifier"@en ;
        sh:description "The identifier of the newspaper."@en ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ],
    [
        a sh:PropertyShape ;
        sh:path dct:type ;
        sh:nodeKind sh:Literal ;
        sh:datatype xsd:string ;
        sh:hasValue "newspaper edition" ;
        sh:name "MODS type"@en ;
        sh:description "The type of the newspaper."@en ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ],
    [
        a sh:PropertyShape ;
        sh:path dcterms:abstract ;
        sh:nodeKind sh:Literal ;
        sh:datatype xsd:string ;
        sh:name "Mods abstract"@en ;
        sh:description "The abstract of the newspaper."@en ;
        sh:uniqueLang true ;
    ],
    [
        a sh:PropertyShape ;
        sh:path dcterms:subject ;
        sh:nodeKind sh:Literal ;
        sh:datatype xsd:string ;
        sh:name "Mods subject topic"@en ;
        sh:description "The subject of the newspaper."@en ;
        sh:uniqueLang true ;
    ],
    [
        a sh:PropertyShape ; 
        sh:path dct:creator ;
        sh:nodeKind sh:IRI ;
        sh:node <#RoleShape> ;
        sh:name "Name of a person"@en ;
        sh:description "The name of a person associated with the newspaper."@en ;
    ],
    [
        a sh:PropertyShape ;
        sh:path dcterms:created ;
        sh:nodeKind sh:Literal ;
        sh:datatype edtf:EDTF-level1 ;
        sh:name "Date created"@en ;
        sh:description "The date of creation of the newspaper."@en ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ],
    [
        a sh:PropertyShape ;
        sh:path dct:issued ;
        sh:nodeKind sh:Literal ;
        sh:datatype edtf:EDTF-level1 ;
        sh:name "Date issued"@en ;
        sh:description "The date of issue of the newspaper."@en ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ],
    #? Abraham URI en ID met Type?
    [
        a sh:PropertyShape ;
        sh:path dct:license ;
        sh:nodeKind sh:Literal ;
        sh:datatype xsd:string ;
        sh:name "License note"@en ;
        sh:description "The license note of the newspaper."@en ;
    ],
    # mods:genre
    [
        a sh:PropertyShape ;
        sh:path edm:hasType ;
        sh:nodeKind sh:Literal ;
        sh:datatype xsd:string ;
        sh:name "Genre"@en ;
        sh:description "The genre of the newspaper."@en ;
    ],
    [
        a sh:PropertyShape ;
        sh:path mods:issuance ;
        sh:nodeKind sh:Literal ;
        sh:datatype xsd:string ;
        sh:name "Issuance"@en ;
        sh:description "The issuance of the newspaper."@en ;
    ] .

<#RoleShape> a sh:NodeShape ; 
    sh:targetClass schema:Role ;
    sh:property
    [
        a sh:PropertyShape ;
        sh:path schema:contributor ;
        sh:nodeKind sh:IRI ;
        sh:node <#PersonShape> ;
        sh:name "contributor"@en ;
        sh:name "bijdrager"@nl ;
        sh:name "contributeur"@fr ;
        sh:severity sh:Violation ;
        sh:message "schema:contributor is not of class schema:Person or org:Organization"@en ;
        sh:message "schema:contributor is niet van de klasse schema:Person of org:Organization"@nl ;
        sh:message "schema:contributor n'est pas de la classe schema:Person ou org:Organization"@fr ;
    ],
    [
        a sh:PropertyShape ;
        sh:path schema:roleName ;
        sh:nodeKind sh:Literal ;
        sh:datatype xsd:string ; 
        sh:minCount 1 ;
        sh:name "role name"@en ;
        sh:name "rolenaam"@nl ;
        sh:name "nom de r√¥le"@fr ;
        sh:severity sh:Violation ;
        sh:message "schema:roleName is missing or not of type string or of class skos:Concept"@en ;
        sh:message "schema:roleName ontbreekt of is niet van het type string of van de klasse skos:Concept"@nl ;
        sh:message "schema:roleName est manquant ou n'est pas de type string ou de la classe skos:Concept"@fr ;
    ] .


<#RoleShape> a sh:NodeShape ;
    sh:targetClass mods:RoleRelationship ;
    sh:property
    [
        a sh:PropertyShape ;
        sh:path mods:roleRelationshipName ;
        sh:nodeKind sh:IRI ;
        # sh:class madsrdf:PersonalName ;
        sh:node <#PersonShape> ;
        sh:name "Role relationship name"@en ;
        sh:description "The role relationship name of a person associated with the newspaper."@en ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ],
    [
        #roleTerm
        a sh:PropertyShape ;
        sh:path mods:roleRelationshipRole ;
        sh:nodeKind sh:Literal ;
        sh:datatype xsd:string ;
        sh:name "Role relationship - role"@en ;
        sh:description "The role associated with a name, where the name and role are bound together in a roleRelationship."@en ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] .

<#PersonShape> a sh:NodeShape ;
    sh:targetClass schema:Person ;
    sh:property
    [
        a sh:PropertyShape ;
        sh:path schema:familyName ;
        sh:nodeKind sh:Literal ;
        sh:datatype xsd:string ;
        sh:name "Family name"@en ;
        sh:description "The family name of a person associated with the newspaper."@en ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ],
    [
        a sh:PropertyShape ;
        sh:path schema:givenName ;
        sh:nodeKind sh:Literal ;
        sh:datatype xsd:string ;
        sh:name "Given name"@en ;
        sh:description "The given name of a person associated with the newspaper."@en ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] .

<#ObjectIdentifierShape> a sh:NodeShape ;
  sh:targetClass haObj:LocalIdentifier ;
  sh:property 
  ## ? Type van id?
  [
    a sh:PropertyShape ;
    sh:path rdf:value ;
    sh:nodeKind sh:Literal ;
    sh:datatype xsd:string ;
    sh:name "has object identifier value"@en ;
    sh:description "The value of the object identifier."@en ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ] .
