    sh:minCount 1 ;
    sh:severity sh:Violation ;
    sh:message "No value for `dct:format`."@en ;
  ],
  [
    a sh:PropertyShape ;
    sh:path dct:format ;
    sh:nodeKind sh:IRI ;
    sh:class dct:FileFormat ;
